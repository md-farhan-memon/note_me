- notes.each do |note|
  %h2
    %a{href: note_path(note)}= note.title
  .row
    .group1.col-sm-6.col-md-6
      %span.glyphicon.glyphicon-pencil
      = note.user.name
    .group2.col-sm-6.col-md-6{style: "text-align: right;"}
      %span.glyphicon.glyphicon-user
      = 'ToDo'
  %hr
  %p.lead{style: "text-align: justify;"}= truncate(note.body, length: 250)
  %p.text-right
    %a{href: note_path(note)}
      continue reading...
  %hr
