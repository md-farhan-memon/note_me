%header.navbar.navbar-default.navbar-fixed-top{role: 'navigation'}
  .container
    .row
      .col-md-8.col-md-offset-2
        .navbar-header
          %button.navbar-toggle{'data-target' => '.navbar-collapse', 'data-toggle' => 'collapse', type: 'button'}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: '/'} NoteMe
        .navbar-collapse.collapse
          %ul.nav.navbar-nav.navbar-right
            - if current_user.present?
              %li
                = link_to 'New Note', new_note_path
              %li.dropdown
                %a.dropdown-toggle{'data-toggle' => 'dropdown', href: ''}
                  My Notes
                  %b.caret
                %ul.dropdown-menu
                  %li
                    = link_to 'Drafted Notes', drafted_notes_path
                  %li
                    = link_to 'Shared Notes', shared_notes_path
                  %li
                    = link_to 'Shared with me', shared_with_me_notes_path
                %li.dropdown
                  %a.dropdown-toggle{'data-toggle' => 'dropdown', href: ''}
                    Settings
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      = link_to 'Change Password', edit_user_registration_path
                    %li
                      = link_to 'LogOut', destroy_user_session_path, method: 'delete'
            - else
              %li
                = link_to 'LogIn', new_user_session_path
              %li
                = link_to 'SignUp', new_user_registration_path
